@{
}
@model Challenge2Alkemy.Models.PostViewModel
@{
    ViewData["Title"] = "DETALLES DEL POST";
}
<h2>@ViewBag.Title</h2>
<div class="row">

    <div class="col-md-12">
        <form asp-action="Details" method="post">

            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h3>@Model.Titulo</h3>
            </div>
            <div class="form-group">
                <p class="accordion">@Model.Contenido</p>
            </div>
            <div class="form-group">
                <h4>Categoria: @Model.Categoria</h4>
            </div>
            <div class="form-group">

                <h4>Fecha</h4>
                <h4>@Model.FechaDeCreacion</h4>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    @Model.Imagen
                </div>
            </div>

        </form>
    </div>
</div>