@model Challenge2Alkemy.Models.PostViewModel
@{
    ViewData["Title"] = "CREAR NUEVO POSTEO";
}
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="custom-control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contenido" class="custom-control-label"></label>
                <input asp-for="Contenido" class="form-control" />
                <span asp-validation-for="Contenido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="custom-control-label"></label>
                <input asp-for="Categoria" class="form-control" />
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDeCreacion" class="custom-control-label"></label>
                <input asp-for="FechaDeCreacion" class="form-control" />
                <span asp-validation-for="FechaDeCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagen" class="custom-control-label"></label><br />
                @Html.TextBoxFor(d => d.Imagen, new { Type = "file", accept = ".png" })
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="CREAR POST" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>
